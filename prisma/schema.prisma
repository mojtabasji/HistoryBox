generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int                @id @default(autoincrement())
  username    String?            @unique
  email       String?            @unique
  phoneNumber String?            @unique
  posts       Post[]
  coins       Int                @default(20)
  unlocks     UserRegionUnlock[]
  createdAt   DateTime           @default(now())
}

model Region {
  id        Int                @id @default(autoincrement())
  geohash   String             @unique
  postCount Int                @default(0)
  posts     Post[]
  blogs     Blog[]
  hash      String             @unique
  unlocks   UserRegionUnlock[]
}

model Post {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  region      Region    @relation(fields: [regionId], references: [id])
  regionId    Int
  title       String
  description String?
  caption     String?
  imageUrl    String
  latitude    Float
  longitude   Float
  address     String?
  memoryDate  DateTime?
  /// Optional string copy of region hash for convenience; relation is via regionId
  regionHash  String?
  createdAt   DateTime  @default(now())
}

model UserRegionUnlock {
  id            Int      @id @default(autoincrement())
  userId        Int
  regionId      Int
  unlockedCount Int      @default(10)
  createdAt     DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  region Region @relation(fields: [regionId], references: [id])

  @@unique([userId, regionId])
}

model Blog {
  id            Int      @id @default(autoincrement())
  title         String
  slug          String   @unique
  body          String
  coverImageUrl String?
  latitude      Float?
  longitude     Float?
  region        Region?  @relation(fields: [regionId], references: [id])
  regionId      Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
