generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String?  @unique
  email       String   @unique
  firebaseUid String?  @unique
  password    String?
  coins       Int      @default(5)
  posts       Post[]
  createdAt   DateTime @default(now())
  unlocks     UserRegionUnlock[]
}

model Region {
  id        Int                @id @default(autoincrement())
  geohash   String             @unique
  hash      String             @unique
  postCount Int                @default(0)
  posts     Post[]
  unlocked  UserRegionUnlock[]
}

model Post {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  region      Region   @relation(fields: [regionId], references: [id])
  regionId    Int
  title       String
  description String?
  caption     String?
  imageUrl    String
  latitude    Float
  longitude   Float
  regionHash  String
  address     String?
  memoryDate  DateTime?
  createdAt   DateTime @default(now())
}

model UserRegionUnlock {
  id        Int      @id @default(autoincrement())
  userId    Int
  regionId  Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  region    Region   @relation(fields: [regionId], references: [id])
  @@unique([userId, regionId])
}

